{
  "name": "bank-greendrive",
  "version": "1.0.0",
  "description": "Bank GreenDrive â€” Data-Driven Green Finance Prototype",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "vite --port 3000",
    "build": "vite build",
    "lint": "eslint . --ext .js,.jsx --ignore-pattern dist/ --ignore-pattern node_modules/",
    "lint:fix": "eslint . --ext .js,.jsx --ignore-pattern dist/ --ignore-pattern node_modules/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit:security": "npm audit --audit-level=high",
    "healthcheck": "node -e \"fetch('http://localhost:3001/').then(r=>r.json()).then(d=>{ console.log(d.status==='ok'?'HEALTHY':'UNHEALTHY'); process.exit(d.status==='ok'?0:1) }).catch(()=>{ console.log('UNREACHABLE'); process.exit(1) })\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.0"
  }
}
