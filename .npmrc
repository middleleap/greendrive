# Bank GreenDrive â€” npm Security Configuration
# Enforces strict dependency resolution and audit policies
# =============================================================================

# Require exact Node.js version match from package.json engines field
engine-strict=true

# Require exact versions in package-lock.json (no floating ranges)
save-exact=true

# Run audit on every install
audit=true

# Fail install if audit finds high/critical vulnerabilities
audit-level=high

# Do not run arbitrary scripts from dependencies during install
ignore-scripts=false

# Prevent npm from resolving to unintended registries
registry=https://registry.npmjs.org/

# Enforce package-lock.json consistency
package-lock=true
